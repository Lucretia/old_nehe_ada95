project Bounding_Volume is

  type Build_Type is ("release", "debug");
  type Platform_Type is ("linux", "win32");
  
  Build    : Build_Type    := external("BUILD", "debug");
  Platform : Platform_Type := external("PLATFORM", "linux");
  
  for Source_Dirs use
    ("../../bounding_volume/",
     "../../adagl/" & Platform,
     "../../adagl/",
     "../../utils/",
     "../../thirdparty/adasdl/thin/adasdl/AdaSDL/binding/");

  for Source_Files use
    ("bounding_volume.adb",
     "example.adb",

     "gl.ads",
     "glu.ads",
     "gl-ext.ads",
     
     "aabb.adb",
     "cylinder.ads",
     "glutils.adb",
     "vector3.adb",
     "matrix3x3.adb",
     "matrix4x4.adb",
     "mesh.adb",
     "obb.adb",
     "sphere.adb",
     "torus.ads",
     "camera.adb",

     "sdl.ads",
     "sdl-video.adb",
     "sdl-active.ads",
     "sdl-events.adb",
     "sdl-keyboard.adb",
     "sdl-keysym.ads",
     "sdl-timer.ads",
     "sdl-types.adb",
     "sdl-mutex.adb",
     "sdl-rwops.adb",
     "sdl-joystick.ads",
     "sdl-mouse.adb",
     "uintn_ptrops.ads",
     "lib_c.ads");
    
  for Object_Dir use "./" & Platform & "/" & Build;
  
  for Exec_Dir use "./" & Platform & "/" & Build;
  
  for Main use ("bounding_volume");

  package Compiler is
    case Build is
      when "debug" =>
        for Default_Switches("Ada") use
          ("-gnata",
           "-gnato",
           "-gnatE",
           "-g");
           
      when "release" =>
        for Default_Switches("Ada") use
          ("-O2");
    end case;
  end Compiler;

  package Builder is
    for Executable ("bounding_volume.adb") use "bounding_volume";
  end Builder;

end Bounding_Volume;
