project Closest_Point_On_Plane is

  type Build_Type is ("release", "debug");
  type Platform_Type is ("linux", "win32");
  
  Build    : Build_Type    := external("BUILD", "debug");
  Platform : Platform_Type := external("PLATFORM", "linux");
  
  for Source_Dirs use
    ("../../closest_point_on_plane/",
     "../../adagl/" & Platform,
     "../../adagl/",
     "../../utils/",
     "../../thirdparty/adasdl/thin/adasdl/AdaSDL/binding/");

  for Source_Files use
    ("closest_point_on_plane.adb",
     "example.adb",

     "gl.ads",
     "glu.ads",
     "gl-ext.ads",
     
     "vector3.adb",
     "geometrical_methods.adb",
     "glutils.adb",
     "line_segment.adb",
     "plane.adb",

     "sdl.ads",
     "sdl-video.adb",
     "sdl-active.ads",
     "sdl-events.adb",
     "sdl-keyboard.adb",
     "sdl-keysym.ads",
     "sdl-timer.ads",
     "sdl-types.adb",
     "sdl-mutex.adb",
     "sdl-rwops.adb",
     "sdl-joystick.ads",
     "sdl-mouse.adb",
     "uintn_ptrops.ads",
     "lib_c.ads");
    
  for Object_Dir use "./" & Platform & "/" & Build;
  
  for Exec_Dir use "./" & Platform & "/" & Build;
  
  for Main use ("closest_point_on_plane");

  package Compiler is
    case Build is
      when "debug" =>
        for Default_Switches("Ada") use
          ("-gnata",
           "-gnato",
           "-gnatE",
           "-g");
           
      when "release" =>
        for Default_Switches("Ada") use
          ("-O2");
    end case;
  end Compiler;

  package Builder is
    for Executable ("closest_point_on_plane.adb") use "closest_point_on_plane";
  end Builder;

end Closest_Point_On_Plane;
